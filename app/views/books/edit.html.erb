</header>


<div class="container-fluid">
  <div class="col-xs-4 col-md-6 col-xs-offset-3">
    <h1>Editing Book</h1>
    <%= form_with model:@book, local:true do |f| %>

    <% if @book.errors.any? %>
      <p><%= @book.errors.count %>error prohibited this book from being saved:</p>
      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>

      <%= f.label :title %> </br>
      <%= f.text_field :title, autofocus: true, class:"col-xs-12" %> </br>
      <%= f.label :opinion %> </br>
      <%= f.text_area :body, autofocus: true, class:"col-xs-12" %>
      <%= f.submit "Update Book", class:"btn btn-default btn-primary btn-block col-xs-12" %>
    <% end %>
    <%= link_to 'Show', book_path(@book) %>
     |
    <%= link_to 'Back', books_path %>
  </div>
</div>



